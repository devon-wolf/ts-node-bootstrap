{
  "name": "ts-node-bootstrap",
  "version": "1.0.0",
  "description": "A template repository for Node TypeScript projects",
  "main": "dist/main.js",
  "scripts": {
    "build": "rimraf ./dist && tsc",
    "build:watch": "rimraf ./dist && tsc --watch --preserveWatchOutput",
    "start": "node dist/main.js",
    "dev": "concurrently -n build,start -c cyan,magenta \"npm run build:watch\" \"wait-on dist/main.js && nodemon dist/main.js\"",
    "test": "jest --verbose",
    "test:watch": "jest --watch --verbose",
    "fix": "prettier --write ."
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/dist"
    ]
  },
  "author": "Devon Wolfkiel",
  "license": "MIT",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@tsconfig/recommended": "^1.0.6",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.7",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.5",
    "wait-on": "^7.2.0"
  }
}
